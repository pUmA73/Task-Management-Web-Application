<head>
    <link href="~/css/welcome-styles.css" rel="stylesheet" type="text/css" />
    @* <script src="~/js/projects.js"></script> *@
</head>

<body>

    <div class="container d-flex justify-content-center pt-5">
        <h4>@ViewBag.CurrDate.DayOfWeek, @ViewBag.CurrDate.Day @ViewBag.CurrDate.ToString("MMMM")</h4>
    </div>

    <div class="container d-flex justify-content-center pb-5">
        @if(ViewBag.CurrDate.Hour < 12)
        {
            <h2>Good Morning</h2>
        }
        else if(ViewBag.CurrDate.Hour >=12 && ViewBag.CurrDate.Hour < 17)
        {
            <h2>Good Afternoon</h2>
        }
        else
        {
            <h2>Good Evening</h2>
        }
    </div>

    <div class="container d-flex justify-content-around pt-5">
            <div class="container border rounded main-card m-2">
                <h3>My Tasks</h3>
                <hr />
                @foreach (var task in ViewBag.Tasks)
                {   
                    <h4>@task.Title</h4>
                    <hr />
                }
            </div>

            <div class="container border rounded main-card m-2">
                <h3>My Projects</h3>
                <hr />
                @foreach (var project in ViewBag.Projects)
                {
                    <h4>@project.Name</h4>
                    <hr />
                }
            </div>
    </div>

    <div class="container p-3">
        <div class="container border rounded main-card">
            <h3>Task Analitics</h3>
            <br />
            <br />
            <h4>Remaining Tasks: @ViewBag.TaskCount</h4>
        </div>
    </div>

</body>